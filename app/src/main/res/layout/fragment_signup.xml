<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_auth_field"
                android:backgroundTint="@color/white"
                android:elevation="1dp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/round_arrow_back_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05"
                app:tint="#363636" />

            <ImageView
                android:id="@+id/hatlyIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/hatly_logo_svg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/sign_up"
                android:textColor="#EA1B25"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/imgBack"
                app:layout_constraintTop_toBottomOf="@+id/hatlyIcon" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/create_an_account_and_begin_your_journey_with_hatly"
                android:textColor="#909090"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.35" />

            <EditText
                android:id="@+id/userFullName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/input_auth_field"
                android:backgroundTint="#33909090"
                android:drawableStart="@drawable/full_name"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="@string/full_name"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:textColorHint="#787878"
                android:textCursorDrawable="@color/black"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

<!--            <EditText-->
<!--                android:id="@+id/userEmail"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="@dimen/_10sdp"-->
<!--                android:background="@drawable/input_auth_field"-->
<!--                android:backgroundTint="#33909090"-->
<!--                android:drawableStart="@drawable/email_address__1_"-->
<!--                android:drawablePadding="@dimen/_10sdp"-->
<!--                android:hint="Email address"-->
<!--                android:imeOptions="actionNext"-->
<!--                android:inputType="textEmailAddress"-->
<!--                android:maxLines="1"-->
<!--                android:paddingVertical="@dimen/_10sdp"-->
<!--                android:paddingStart="@dimen/_10sdp"-->
<!--                android:textColorHint="#787878"-->
<!--                android:textCursorDrawable="@color/black"-->
<!--                android:textSize="@dimen/_13ssp"-->
<!--                app:layout_constraintEnd_toEndOf="@+id/userFullName"-->
<!--                app:layout_constraintStart_toStartOf="@+id/userFullName"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/userFullName" />-->

            <EditText
                android:id="@+id/userMobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/input_auth_field"
                android:backgroundTint="#33909090"
                android:drawableStart="@drawable/mobile_number"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="@string/mobile_number"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:textColorHint="#787878"
                android:textCursorDrawable="@color/black"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="@+id/userFullName"
                app:layout_constraintStart_toStartOf="@+id/userFullName"
                app:layout_constraintTop_toBottomOf="@+id/userFullName" />

            <EditText
                android:id="@+id/userPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/input_auth_field"
                android:backgroundTint="#33909090"
                android:drawableStart="@drawable/password"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="@string/password"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:textColorHint="#787878"
                android:textCursorDrawable="@color/black"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="@+id/userMobile"
                app:layout_constraintStart_toStartOf="@+id/userMobile"
                app:layout_constraintTop_toBottomOf="@+id/userMobile" />


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:buttonTint="@color/remember_me_selector_color"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:layout_constraintStart_toStartOf="@+id/userPassword"
                app:layout_constraintTop_toBottomOf="@+id/userPassword" />

            <TextView
                android:id="@+id/txtCheckPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/by_creating_your_account_you_agree_on_our"
                android:textColor="#909090"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toEndOf="@+id/checkBox"
                app:layout_constraintTop_toTopOf="@+id/checkBox" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/terms_amp_conditions_and"
                android:textColor="#EA1B25"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox"
                app:layout_constraintStart_toStartOf="@+id/txtCheckPrivacy"
                app:layout_constraintTop_toBottomOf="@+id/txtCheckPrivacy" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/privacy_policy"
                android:textColor="#EA1B25"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/button_radius_green"
                android:fontFamily="@font/open_sans_regular"
                android:paddingVertical="@dimen/_10sdp"
                android:text="@string/sign_up"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/userPassword"
                app:layout_constraintStart_toStartOf="@+id/userPassword"
                app:layout_constraintTop_toBottomOf="@+id/checkBox" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/or_sign_up_with"
                android:textColor="#999696"
                app:layout_goneMarginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLogin" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="#999696"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/txtLogin"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="#999696"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/txtLogin"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/txtLoginFacebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_radius_green"
                android:backgroundTint="#1877F2"
                android:paddingVertical="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/fb_icon"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="@string/sign_up_with_facebook"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/txtLoginGoogle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_radius_corner"
                android:paddingVertical="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/txtLoginFacebook"
                app:layout_constraintStart_toStartOf="@+id/txtLoginFacebook"
                app:layout_constraintTop_toBottomOf="@+id/txtLoginFacebook">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/google_48"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center_horizontal"
                    android:text="@string/sign_up_with_google"
                    android:textColor="#424242"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_20sdp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/already_have_an_account_login"
                android:textColor="#1ED860"
                app:layout_goneMarginTop="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="@+id/txtLogin"
                app:layout_constraintStart_toStartOf="@+id/txtLogin"
                app:layout_constraintTop_toBottomOf="@+id/txtLoginGoogle" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>